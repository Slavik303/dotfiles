set from             = "sviatoslav.dudik@gmail.com"
set use_from         = yes
set realname         = "Sviatoslav Dudik"

named-mailboxes "Work" +"Work/Work"
named-mailboxes "Work.Archives" +"Work/archives"
named-mailboxes "Work.Sent" +"Work/sent"
named-mailboxes "Work.Trash" +"Work/trash"

set mbox ="+Work/archives"
set trash = "+Work/trash"
set record = "+Work/sent"

mbox-hook +Work/Work +Work/archives

unset imap_login
unset signature

unset pgp_default_key
unset pgp_sign_as
