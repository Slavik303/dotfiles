folder-hook '~/.mail/Home' 'source ~/.config/mutt/accounts/personal'
folder-hook '~/.mail/Study' 'source ~/.config/mutt/accounts/study'
folder-hook '~/.mail/Work' 'source ~/.config/mutt/accounts/work'

source ~/.config/mutt/gpg.rc
source ~/.config/mutt/sidebar
source ~/.config/mutt/theme
source ~/.config/mutt/bindings

set header_cache = ~/.cache/mutt
set message_cachedir = "~/.cache/mutt"
set net_inc = 5

set folder           = "~/.mail/"
set spoolfile        = "+Home/Home"
set mbox_type        = Maildir
set envelope_from    = yes
set sendmail         = "/usr/bin/msmtp"
set beep             = no
set edit_headers     = yes
set editor           = "vim +/^$ +nohlsearch"
set charset          = "utf-8"
set query_command    = "abook --mutt-query %s"
set mail_check_stats = yes
set mail_check_stats_interval = 300

set crypt_verify_sig = yes

set mailcap_path     = "~/.config/mutt/mailcap"
auto_view application/pdf
alternative_order text/plain text/enriched text/html

source ~/.config/mutt/accounts/personal
source ~/.config/mutt/accounts/study
source ~/.config/mutt/accounts/work


